# App Configuration
APP_ENV=development
DEBUG=true
DEV_FALLBACK=true

# Database Configuration (Microsoft SQL Server)
DB_SERVER=sqlserver
DB_PORT=1433
DB_NAME=WeatherAI
DB_USER=sa
DB_PASSWORD=Your_password123

# Database Bootstrap Configuration
# Set to true to skip database creation (useful for external DB management)
SKIP_DB_BOOTSTRAP=false
# Maximum attempts to connect during bootstrap
DB_BOOTSTRAP_MAX_ATTEMPTS=30
# Seconds to wait between bootstrap attempts
DB_BOOTSTRAP_SLEEP_SECONDS=2
# Enable legacy startup migration (set to false if using entrypoint bootstrap)
ENABLE_STARTUP_MIGRATION=false

# Redis Configuration
REDIS_URL=redis://redis:6379

# Redis Usage Configuration
# Set to true to use Redis for rate limiting, false for in-memory
USE_REDIS_RATE_LIMIT=true

# JWT Configuration
# WARNING: Change this secret in production!
JWT_SECRET=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
# Optional: Leave empty to use mock responses
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
LLM_RATE_LIMIT_REQUESTS_PER_MINUTE=10

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173"]