# App Configuration
APP_ENV=development
DEBUG=true

# Database Configuration (Microsoft SQL Server)
DB_SERVER=sqlserver
DB_PORT=1433
DB_NAME=WeatherAI
DB_USER=sa
DB_PASSWORD=Your_password123

# Redis Configuration
REDIS_URL=redis://redis:6379

# JWT Configuration
# WARNING: Change this secret in production!
JWT_SECRET=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
# Optional: Leave empty to use mock responses
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
LLM_RATE_LIMIT_REQUESTS_PER_MINUTE=10

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173", "http://localhost:3000"]