# App Configuration
APP_ENV=development
DEBUG=true
DEV_FALLBACK=true

# Database Configuration (Microsoft SQL Server)
DB_SERVER=localhost
DB_PORT=1433
DB_NAME=WeatherAI
DB_USER=test_user
DB_PASSWORD=TestPassword123!
DATABASE_URL="mssql+pyodbc://test_user:TestPassword123!@localhost,1433/WeatherAI?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes"

# Database Bootstrap Configuration
SKIP_DB_BOOTSTRAP=false
DB_BOOTSTRAP_MAX_ATTEMPTS=30
DB_BOOTSTRAP_SLEEP_SECONDS=2


# Redis Configuration
REDIS_URL=redis://redis:6379
USE_REDIS_RATE_LIMIT=true
REDIS_CACHE_ANALYTICS_TTL=60
REDIS_CACHE_FORECAST_TTL=300

# Redis Usage Configuration
# Set to true to use Redis for rate limiting, false for in-memory
USE_REDIS_RATE_LIMIT=true

# JWT Configuration
# WARNING: Change this secret in production!
JWT_SECRET=change-this-secret-key-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# OpenAI Configuration
# Optional: Leave empty to use mock responses
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
LLM_RATE_LIMIT_REQUESTS_PER_MINUTE=10

# Analytics Pipeline
NO_REFRESH=false

# CORS Configuration
CORS_ORIGINS=["http://localhost:5173"]